{
  "name": "jarvis-ultra-instinct",
  "version": "2.0.0",
  "description": "BUREAU ULTRA INSTINCT - Dashboard IA complet avec génération de code",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate": "node jarvis-cli-main.js",
    "dashboard": "node jarvis-cli-main.js dashboard",
    "electron": "node scripts/start-electron-dev.js",
    "electron-dev": "node scripts/start-electron-dev.js",
    "electron-build": "cross-env NODE_ENV=production electron .",
    "export": "next export",
    "build-electron": "node scripts/build-electron.js",
    "build-win": "cross-env NODE_ENV=production node scripts/build-electron.js",
    "build-mac": "cross-env NODE_ENV=production node scripts/build-electron.js",
    "build-linux": "cross-env NODE_ENV=production node scripts/build-electron.js",
    "install-deps": "npm install",
    "setup": "npm install && echo Setup terminé !",
    "clean": "rimraf out dist-electron .next"
  },
  "keywords": [
    "ai",
    "dashboard",
    "code-generation",
    "react",
    "nextjs",
    "ultra-instinct",
    "jarvis",
    "groq"
  ],
  "author": "Guima",
  "license": "MIT",
  "dependencies": {
    "@codesandbox/sandpack-react": "^2.20.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "axios": "^1.4.0",
    "chalk": "^5.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^9.4.1",
    "figlet": "^1.8.2",
    "groq-sdk": "^0.32.0",
    "inquirer": "^12.9.4",
    "lucide-react": "^0.263.0",
    "next": "^14.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-force-graph-2d": "^1.25.0",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "d3": "^7.8.5",
    "d3-force": "^3.0.0",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.guima.jarvis-ultra-instinct",
    "productName": "JARVIS Ultra Instinct",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "public/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "JARVIS-Ultra-Instinct-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JARVIS Ultra Instinct"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
